{% spaceless %}
{% import 'macros.twig' as MyRadio %}
<!DOCTYPE html>
<html>
  <head>
    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
    {% include 'parts/base_head.twig' %}
    <link rel="stylesheet" type="text/css" href="{{baseurl}}css/timelord.css">
  </head>
  <body>
    <div id="studio" class="studio1">Studio <span id="studio-id">X</span> is On Air</div>
    <div id="time">00:00:00</div>
    <div id="date">1st January 1970</div>
    <div id="breaking-container"></div>
    <div id="current-show">
      <span class="bracket1">(</span><span class="bracket2">(</span>
      <span id="current-show-title">Jukebox</span>
      <span class="bracket2">)</span><span class="bracket1">)</span></div>
    <div id="next-show">Up Next: <span id="next-show-titles">Jukebox @ 00:00am<br>Jukebox @ 00:00am</span></div>
    <div id="alert-status">
      <div id="power-s1">Studio 1</div>
      <div id="power-s2">Studio 2</div>
      <div id="routeob-s1">OB 1</div>
      <div id="routeob-s2">OB 2</div>
      <div id="obit">OBIT</div>
      <div id="silence">DEAD AIR</div>
    </div>
    {% include 'parts/base_foot.twig' %}
    <script type="text/javascript" src="{{baseurl}}js/timelord.js"></script>
  </body>
</html>
{% endspaceless %}
