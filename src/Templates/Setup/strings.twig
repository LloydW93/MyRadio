{% extends 'minimal.twig' %}
{% block content %}
<p>This page gives you lots of Configurables! Set these up how you want them to be. You can always change these later.</p>
<form action="?c=strings" method="POST">
<table style="vertical-align:middle">
{% for item in short %}
<tr style="height: 5em">
<td><label for="{{item[0]}}">{{item[1]}}</label></td>
<td><input type="text" name="{{item[0]}}" id="{{item[0]}}" value="{{item[3]}}" /></td>
<td style="padding:10px; width: 30%">{{item[2]|raw}}</td>
</tr>
{% endfor %}
{% for item in long %}
<tr style="height: 5em">
<td><label for="{{item[0]}}">{{item[1]}}</label></td>
<td colspan="2"><textarea name="{{item[0]}}" id="{{item[0]}}" rows="10" cols="50">{{item[3]}}"</textarea></td>
</tr>
<tr><td colspan="3">{{item[2]|raw}}</td></tr>
{% endfor %}
</table>
<input type="submit" value="Save and Continue" class="btn btn-default">
</form>
{% endblock %}
