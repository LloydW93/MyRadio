{% extends 'form.twig' %}
{% block stripecontent %}
{% if frm_custom.error %}
<div class='alert alert-danger'>
    {% if frm_custom.error is empty %}
    Failed. Please check your details and try again.
    {% else %}
    {{frm_custom.error}}
    {% endif %}
</div>
{% elseif frm_custom.sent %}
<div class='alert alert-info'>
    <span class="glyphicon glyphicon-ok-sign"></span> Please check your email for a password reset link.
</div>
{% endif %}
{% for provider in frm_custom.messages %}
<p>{{ provider | raw }}</p>
{% endfor %}
{{ parent() }}
{% endblock %}
